{
  "name": "honotype",
  "author": "Sasha Zmts",
  "scripts": {
    "start:dev:api-main": "npm run lint && tsx watch apps/api-main/main.ts",
    "start:prod:api-main": "node dist/apps/api-main/main.js",
    "prebuild": "rm -rf ./dist",
    "build": "tsc && tsc-alias",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "migrations:api-main": "node dist/apps/api-main/main.js --migrations"
  },
  "dependencies": {
    "@hono/node-server": "1.13.8",
    "argon2": "0.41.1",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.39.1",
    "hono": "4.6.20",
    "pg": "8.13.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/node": "20.17.16",
    "@types/pg": "8.11.11",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@typescript-eslint/parser": "8.22.0",
    "drizzle-kit": "0.30.4",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-unicorn": "56.0.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "knex": "3.1.0",
    "prettier": "3.4.2",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  }
}
